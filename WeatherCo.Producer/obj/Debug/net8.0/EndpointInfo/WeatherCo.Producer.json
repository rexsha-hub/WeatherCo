{
  "openapi": "3.0.4",
  "info": {
    "title": "WeatherCo.Producer",
    "version": "1.0"
  },
  "paths": {
    "/": {
      "get": {
        "tags": [
          "WeatherCo.Producer"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/forecast": {
      "get": {
        "tags": [
          "WeatherCo.Producer"
        ],
        "operationId": "GetForecastDefault",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/forecast/range": {
      "get": {
        "tags": [
          "WeatherCo.Producer"
        ],
        "operationId": "GetForecastRange",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "days",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherDto"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/forecast/{date}": {
      "get": {
        "tags": [
          "WeatherCo.Producer"
        ],
        "operationId": "GetForecastForDate",
        "parameters": [
          {
            "name": "date",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WeatherDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "WeatherDto": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32"
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}